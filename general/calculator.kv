<Calculator>:
    orientation: 'vertical'
    # Top Box: Display
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1,0.15
        padding: ('5dp', '5dp', '5dp', '5dp')
        
        # Left: Memory
        Label:
            size_hint: 0.1,1
            text:'M'
            font_size: "30dp"
            
        # Mid: Main Display
        Label:
            size_hint: 0.8,1
            text: root.display
            font_size: "60dp"
            font_name: 'fonts\digital-7.ttf'
        # Right: Active Operation
        Label:
            size_hint: 0.1,1
            text:'='
            font_size: "30dp"

    # Mid Box: Operation and Number buttons
    BoxLayout:
        orientation:'vertical'
        size_hint: 1,0.75
        padding: ('5dp', '5dp', '5dp', '5dp')
        # Top: Memory
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols: 6
            size_hint: 1,0.1
            Button:
                id:"mem_plus"
                text:'M+'
            Button:
                id: "mem_minus"
                text:'M-'
            Button:
                id: "mem_recall"
                text:'MR'
            Button:
                id: "mem_clear"
                text:'MC'
            Button:
                id: "clear_all"
                text:'CE'
            Button:
                id:"back_one"
                text:'<-'
        
        # Mid: Complex Functions and Clear
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols:5
            size_hint: 1,0.4
            Button:
                id:"exp"
                text:'x^y'
            Button:
                id: "square"
                text:'x^2'
            Button:
                id: "factorial"
                text:'x!'
            Button:
                id: "inverse"
                text:'1/x'
            Button:
                id: "sq_root"
                text:'sq(x)'
            Button:
                id: "open_parent"
                text:'('
            Button:
                id:"close_parent"
                text:')'
            Button:
                id: "absolute"
                text:'|x|'
            Button:
                id: "factorial"
                text:'x!'
            Button:
                id: "e"
                text:'e'
            Button:
                id: "py"
                text:'pi'
            Button:
                id: "log"
                text:'log'
            Button:
                id: "plus_minus"
                text:'+/-'
            Button:
                id:"ln"
                text:'ln'
            Button:
                id: "cos"
                text:'cos'
            Button:
                id: "sin"
                text:'sin'
            Button:
                id: "tan"
                text:'tan'
            Button:
                id: "y_root"
                text:'y(x)'
            Button:
                id: "mod"
                text:'mod'
            Button:
                id: "e_to_x"
                text:'e^x'
            
        # Bottom: Numbers and Basic Functions
        GridLayout:
            padding: ('5dp', '5dp', '5dp', '5dp')
            cols:4
            size_hint: 1,0.5
            Button:
                id: "7"
                text:'7'
                on_press: root.digit(7)
            Button:
                id: "8"
                text:'8'
                on_press: root.digit(8)
            Button:
                id: "9"
                text:'9'
                on_press: root.digit(9)
            Button:
                id: "plus"
                text:'+'
                on_press: root.action("+")
            Button:
                id: "4"
                text:'4'
                on_press: root.digit(4)
            Button:
                id: "5"
                text:'5'
                on_press: root.digit(5)
            Button:
                id: "6"
                text:'6'
                on_press: root.digit(6)
            Button:
                id: "minus"
                text:'-'
                on_press: root.action("-")
            Button:
                id: "1"
                text:'1'
                on_press: root.digit(1)
            Button:
                id: "2"
                text:'2'
                on_press: root.digit(2)
            Button:
                id: "3"
                text:'3'
                on_press: root.digit(3)
            Button:
                id: "multiply"
                text:'x'
                on_press: root.action("*")
            Button:
                id: "point"
                text:'.'
                on_press: root.digit(".")
            Button:
                id: "0"
                text:'0'
                on_press: root.digit(0)
            Button:
                id: "equals"
                text:'='
                on_press: root.action("=")
            Button:
                id: "divide"
                text:'/'
                on_press: root.action("/")

    #Bottom Box
    Label:
        size_hint: 1,0.1
        text:'Bottom Box'
